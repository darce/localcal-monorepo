{
  "name": "localcal-ui",
  "version": "0.0.0",
  "description": "LocalCal Frontend",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "check:all": "npm run lint:fix && npm run format:fix && npm run typecheck && npm run test",
    "nuke": "rm -rf node_modules .next && npm install"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.1",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "prettier-plugin-curly": "^0.4.1",
    "sass": "^1.96.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "vitest-axe": "^0.1.0"
  },
  "keywords": [],
  "author": "darce",
  "license": "MIT"
}